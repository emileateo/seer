<% if appointment.status %>
  <div class="card-product accepted">
    <div class="appointment-details">
      <h5 class="accepted-details-date"><%= appointment.when.strftime("%a %d %b %Y, %l:%M%P") %></h5>
      <ul>
        <li>With <strong><%= appointment.master.email %></strong></li>
        <li>Your message: “<%= appointment.message %>” </li>
      </ul>
    </div>
  </div>
<% else %>
  <div class="card-product appointment-details">
    <ul style="list-style-type: none;">
      <li>Your request to <strong><%= appointment.master.email %></strong> at <%= appointment.created_at %>:</li>
      <br>
      <li>For <strong><%= appointment.when.strftime("%a %d %b %Y, %l:%M%P") %></strong></li>
      <li>Your message: “<em><%= appointment.message %></em>” </li>
    </ul>
  </div>
<% end %>
