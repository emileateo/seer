<h1 class="mt-4">Love Divination</h1>
<p class="mt-3">You and <%= @lover_name %> are <%= @love_result %>% compatible.</p>

<div class="inside-got-heart mb-4">
  <% if @love_result > 80 %>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart2"></div>
  <% elsif @love_result > 60 %>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart1"></div>
  <% elsif @love_result > 40 %>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart1"></div>
    <div class="heart1"></div>
    <div class="love-reading mt-5">
      <small>Not bad, but could be better.</small>
    </div>
  <% elsif @love_result > 20 %>
    <div class="heart2"></div>
    <div class="heart2"></div>
    <div class="heart1"></div>
    <div class="heart1"></div>
    <div class="heart1"></div>
  <% else %>
    <div class="heart2"></div>
    <div class="heart1"></div>
    <div class="heart1"></div>
    <div class="heart1"></div>
    <div class="heart1"></div>
  <% end %>
</div>

