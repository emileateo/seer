<h1><%= Date.today.strftime("%A %-d %B") %></h1>
<p>Welcome back, <%= @user.email%></p>

<% if current_user.master? %>
  <% if @unaccepted_appointments.count != 0 %>
    <h2>Your requests:</h2>
    <% @unaccepted_appointments.each do |request| %>
      <div class="card-product">
        <ul>
          <li>From: <%= request.user.email %></li>
          <li>Message: <%= request.message %> </li>
          <li>For: <%= request.when %> </li>
          <li><%= link_to "Approve", approve_appointments_user_path(request), method: :patch %></li>
        </ul>
      </div>
    <% end %>
  <% end %>
  <% if @accepted_appointments.count != 0 %>
    <h2>Your upcoming appointments:</h2>
    <% @accepted_appointments.each do |request| %>
      <div class="card-product">
        <ul>
          <li>From: <%= request.user.email %></li>
          <li>Message: <%= request.message %> </li>
          <li>For: <%= request.when %> </li>
        </ul>
      </div>
    <% end %>
  <% end %>
<% else %>
  <%= render @preferred_posts %>
  <%= link_to masters_users_path do %>
    <div class="card-product">
      <%= image_tag 'fortuneteller.jpg' %>
      <div class="card-product-infos">
        <h2>Book a service</h2>
        <p>Consult a professional fortune teller</p>
      </div>
    </div>
  <% end %>
<% end %>


